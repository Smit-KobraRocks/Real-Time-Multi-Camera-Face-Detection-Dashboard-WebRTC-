{
  "extends": "./tsconfig.node.json",
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "outDir": "dist/server",
    "rootDir": "src/server",
    "types": ["node"],
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true
  },
  "include": ["src/server/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
